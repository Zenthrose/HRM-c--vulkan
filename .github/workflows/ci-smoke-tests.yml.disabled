name: CI - Smoke Tests

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup build dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y build-essential cmake python3 python3-pip

      - name: Configure (no Vulkan)
        run: cmake -S . -B build -DNO_VULKAN=ON

      - name: Build smoke test
        run: cmake --build build -j $(nproc) --target attention_cpu_grad_smoke

      - name: Run attention CPU gradient smoke test
        working-directory: build/release
        run: |
          ./attention_cpu_grad_smoke
