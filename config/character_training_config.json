{
  "model": {
    "char_vocab_size": 128,
    "hidden_size": 64,
    "num_layers": 1,
    "num_heads": 2,
    "max_seq_length": 128
  },
  "training": {
    "learning_rate": 0.001,
    "batch_size": 1,
    "gradient_accumulation_steps": 1,
    "max_epochs": 1,
    "context_length": 128,
    "save_every_epochs": 1
  },
  "data": {
    "dataset_path": "./data/text",
    "train_val_split": 0.9,
    "shuffle_sequences": true
  },
  "generation": {
    "temperature": 1.0,
    "top_p": 0.9,
    "max_length": 500
  }
}
